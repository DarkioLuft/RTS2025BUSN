{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "pyocd",
			"args": [
				"load",
				"-t",
				"nrf52833",
				"--format",
				"elf",
				"Code/obj/main"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "Build & Flash",
			"dependsOn": [
				"Build"
			]
		},
		{
			"type": "ada",
			"command": "gprbuild",
			"args": [
				"${command:ada.gprProjectArgs}",
				"Code/src/main.adb",
				"-cargs:ada",
				"-gnatef"
			],
			"problemMatcher": [
				"$ada"
			],
			"group": "build",
			"label": "Build"
		},
		{
			"type": "shell",
			"command": "pyocd",
			"args": [
				"load",
				"-t",
				"nrf52833",
				"--format",
				"elf",
				"Code/obj/main"
			],
			"group": "build",
			"label": "Flash"
		},
		{
			"type": "shell",
			"command": "pyocd",
			"args": [
				"erase",
				"--mass",
				"-t",
				"nrf52833"
			],
			"group": "build",
			"label": "Erase"
		},
		{
			"type": "ada",
			"compound": [
				"ada: Build main - Code/src/main.adb",
				"ada: Run main - Code/src/main.adb"
			],
			"label": "ada: Build and run main - Code/src/main.adb"
		}
	]

}
